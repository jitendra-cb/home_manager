alias aliases='bat ~/.aliases --pager never && bat ~/.custom_aliases --pager never'

alias sz='exec zsh'

alias l='ls -lah --color=auto'
alias ll='ls -lh --color=auto'

alias asl='aws sso login'
alias b='bloop'

alias gco='git checkout'
alias gd='git diff'
alias gf='git fetch --all -p'
alias ggpush='git push origin "$(git rev-parse --abbrev-ref HEAD)"'
alias ggpull='git pull origin "$(git rev-parse --abbrev-ref HEAD)"'

alias gs='git add . && git status'
alias gsf='git fetch upstream && gco master && git merge upstream/master && ggpush'
